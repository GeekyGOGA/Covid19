<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/country_timeline_date_id"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/country_timeline_date"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:padding="5dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/country_timeline_confirmed_id"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="@string/country_timeline_confirmed"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:padding="5dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/country_timeline_deaths_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/country_timeline_deaths"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:padding="5dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/country_timeline_recovered_id"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="@string/country_timeline_recovered"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:padding="5dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/country_timeline_new_cases_id"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="@string/country_timeline_new_cases"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:padding="5dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/country_timeline_new_deaths_id"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/country_timeline_new_deaths"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:padding="5dp"/>

    </LinearLayout>

</LinearLayout>